server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}


server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;

    ssl_certificate /etc/letsencrypt/live/nostdal.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/nostdal.duckdns.org/privkey.pem;

    ## The following is based on: https://bjornjohansen.no/optimizing-https-nginx
    ssl_session_cache shared:SSL:20m;
    ssl_session_timeout 180m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:!ADH:!AECDH:!MD5;
    ssl_dhparam /etc/letsencrypt/live/nostdal.duckdns.org/dhparam.pem;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;


    root /home/lnostdal/www;
}
