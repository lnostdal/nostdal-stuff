server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}



server {
    listen 443 default_server ssl http2;
    listen [::]:443 default_server ssl http2;
    server_name _;

    ssl_certificate /etc/letsencrypt/live/nostdal.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/nostdal.duckdns.org/privkey.pem;
    ssl_dhparam /etc/letsencrypt/live/nostdal.duckdns.org/dhparams.pem;

    ssl_session_cache shared:SSL:20m;
    ssl_session_timeout 180m;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:!ADH:!AECDH:!MD5;

    #ssl_stapling on;
    #ssl_stapling_verify on;
    #ssl_trusted_certificate /etc/letsencrypt/live/nostdal.duckdns.org/trustchain.crt;

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    root /home/lnostdal/www;
    index index.html;

    location / {
        try_files $uri $uri/ =404;

    }

    ## SymbolicWeb: https://github.com/lnostdal/SymbolicWeb/ (TODO: Make this an include snippet?)
    location /sw/ {
        proxy_pass http://127.0.0.1:8080;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /static/ {
        access_log off;
        log_not_found on;
        expires 30d;
    }
}
